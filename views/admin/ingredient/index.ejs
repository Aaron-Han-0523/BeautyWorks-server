        <tbody class="table-body">
          <tr>
            <td>종류</td>
            <td>기능</td>
            <td>원료명</td>
            <td>성분명</td>
            <td>특징</td>
            <td><a href="#">수정</a> / <a href="#">삭제</a></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="col-2">
          <div class="add-button">
            <button type="button" onclick="location.href='ingredientAdd'">추가하기</button>
          </div>
        </div>
      </div>
    </div>
  </div>


</body>

</html>