                    <!-- MOQ 선택 -->
                    <div class="mt-5">
                      <!-- <div>
                        <%= __('users.newProject.moq.moqSelect.before1') %>
                      </div> -->
                      <!-- <div>
                        <%= __('users.newProject.moq.moqSelect.before2') %>
                      </div> -->
                      <div>
                        <%= __('project.moq') %>
                      </div>
                      <div>
                        <select class="form-select" name="moq" required>
                          <option value="">
                            <%= __('users.newProject.moq.moqSelect.placeholder') %>
                          </option>
                          <% for(let i=0;i< codezip.moq_select_list.length; i++) { %>
                          <% if(project.moq==+codezip.moq_select_list[i].replace(/,/g,'')){ %>
                          <option value="<%= codezip.moq_select_list[i].replace(/,/g,'') %>" selected>
                            <%= codezip.moq_select_list[i] %>
                          </option>
                          <% }else{ %>
                          <option value="<%= codezip.moq_select_list[i].replace(/,/g,'') %>">
                            <%= codezip.moq_select_list[i] %>
                          </option>
                          <% }} %>
                          <option value="0">
                            <%= __('users.newProject.moq.moqSelect.others') %>
                          </option>
                        </select>
                      </div>
                      <!-- <div style="color: red;">
                        <%- __('users.newProject.moq.moqSelect.after') %>
                      </div> -->
                    </div>
                    <!-- 개당 단가 출력 -->
                    <!-- <div class="mt-5">
                      <div>
                        <%= __('users.newProject.moq.checkUnitPrice.before') %>
                      </div>
                      <div class="form-control my-2 d-flex align-items-baseline py-0 pe-0 bg-gray">
                        <span class="ms-2" style="left:0px;">$</span>
                        <input class="form-control w-100 align-placeholder" style="border: 0px;" id="unitPrice" placeholder="<%= __('users.newProject.moq.checkUnitPrice.placeholder') %>" disabled>
                      </div>
                    </div> -->
                  </div>

                  <hr>

                  <!-- target product -->
                  <div class="form-group p-5">
                    <!-- title -->
                    <!-- <div>
                      <div class="h6">
                        <%= __('users.newProject.isTarget.question') %>
                      </div>
                      <div class="col-3 d-flex flex-nowrap">
                        <% if(project.target_url) { %>
                        <input type="radio" class="btn-check" name="have" id="have_benchmark_ture" checked>
                        <% }else{ %>
                        <input type="radio" class="btn-check" name="have" id="have_benchmark_ture">
                        <% } %>
                        <label class="col-6 btn btn-outline-primary my-0 me-4" for="have_benchmark_ture">
                          <%= __('users.newProject.basic.btn.yes') %>
                        </label>

                        <% if(project.target_url) { %>
                        <input type="radio" class="btn-check" name="have" id="have_benchmark_false">
