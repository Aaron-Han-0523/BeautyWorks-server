<!DOCTYPE html>
<html lang="ko">

<head>
  <%- include ("../partials/header.ejs") %>
  <!-- 이미지 그룹 슬라이드 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.1/css/swiper.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.1/js/swiper.js"></script>
</head>

<body class="layout-boxed">

  <%- include ("../partials/loader.ejs") %>

  <%- include ("../partials/client-nav.ejs") %>

  <!--  BEGIN MAIN CONTAINER  -->
  <div class="main-container" id="container">

    <div class="overlay"></div>
    <div class="search-overlay"></div>

    <%- include ("../partials/client-sidebar.ejs") %>

    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
      <div class="layout-px-spacing">

        <div class="middle-content container-xxl">

          <!-- BREADCRUMB -->
          <div class="row px-3">
            <div class="breadcrumb align-items-end d-flex pt-3 br-20">
              <div class="p-1 col-3">
                <h6 class="main-menu">
                  <%= __('Main') %>
                </h6>
                <h4><strong>
                    <%= __('Dashboard') %>
                  </strong></h4>
              </div>
            </div>
          </div>
          <!-- CONTENT AREA -->
          <div class="row mt-3">
            <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">

              <!-- Progress -->
              <div class="widget-content widget-content-area br-20 px-4">
                <div class="form-group ms-3">

                  <div class="row mb-3">
                    <div class="justify-content-between d-flex px-0">
                      <div>
                        <h5><strong>
                            <%= __('users.dashboard.header.Progress') %>
                          </strong>
                        </h5>
                      </div>
                      <div class="row text-end">
                        <a href="<%= codezip.url.users.myProject.main %>">
                          <%= __('Show All') %>
                        </a>
                      </div>
                    </div>
                  </div>
                  <!-- /* 테스트 데이터 생성 -->
                  <div>
                    <% let project=[]; %>
                    <% project.push({
                      projectName:"1. My Suncream",
                      phase:7
                    }) %>
                    <% project.push({
                      projectName:"2. My Suncream",
                      phase:8
                    }) %>
                    <% project.push({
                      projectName:"3. My Suncream",
                      phase:1
                    }) %>
                  </div>
                  <!-- 테스트 데이터 생성 */ -->
                  <% project.forEach((item,index)=>{ %>
                  <div class="row">
                    <div class="progress-card">
                      <div class="progress-card-img progress-<%= item.phase %>">
                        <img src="<%= codezip.url.users.progress_icon['_'+item.phase] %>">
                      </div>
                      <div class="progress-card-body">
                        <div class="progress-card-name">
                          <h6>
                            <%= (index+1)+'. '+item.projectName %>
                          </h6>
                        </div>
                        <%- include("../partials/progressbar/"+item.phase+".ejs") %>
                      </div>
                    </div>
                  </div>
                  <% }) %>

                </div>
              </div>

              <!-- 임시 저장한 Progress -->
              <div class="widget-content widget-content-area br-20 px-4 mt-3">
                <div class="form-group ms-3">
                  <div class="row mb-3">
                    <div class="justify-content-between d-flex px-0">
                      <div>
                        <h5><strong>
                            <%= __("users.dashboard.header.TempProgress") %>
                          </strong>
                        </h5>
                      </div>
                      <div class="row text-end">
                        <a href="<%= codezip.url.users.myProject.main %>">
                          <%= __("Show All") %>
                        </a>
                      </div>
                    </div>
                  </div>
                  <!-- /* 테스트 데이터 생성 -->
                  <div>
                    <% let temp_project=[]; %>
                    <% temp_project.push({
                      projectName:"1. My Suncream",
                      phase:0,
                      detailPhase:1
                    }) %>
                    <% temp_project.push({
                      projectName:"2. My Suncream",
                      phase:0,
                      detailPhase:2
                    }) %>
                  </div>
                  <!-- 테스트 데이터 생성 */ -->
                  <% temp_project.forEach((item,index)=>{ %>
                  <div class="row">
                    <div class="progress-card">
                      <div class="progress-card-img progress-<%= item.phase %>">
                        <img src="<%=codezip.url.users.progress_icon[`_`+item.phase] %>">
                      </div>
                      <div class="progress-card-body">
                        <div class="progress-card-name">
                          <h6>
                            <%= (index+1)+". "+item.projectName %>
                          </h6>
                        </div>
                        <%- include("../partials/temp_progressbar/"+item.detailPhase+".ejs") %>
                      </div>
                    </div>
                  </div>
                  <% }) %>

                </div>
              </div>

              <!-- Completed Project -->
              <!-- /* 테스트 데이터 생성 -->
              <div>
                <% let completed_project={data:[]}; %>
                <% completed_project.data.push({
                  productName:"My Suncream1",
                  volume:"110ml",
                  category1:0,
                  category2:0,
                  totalOrderAmount:10000,
                  lastOrderDate:new Date(2022,10,5),
                  imagePaths:"http://oldmidi.cdn3.cafe24.com/p/0553.jpg,http://ktsmemo.cdn3.cafe24.com/p/0455.jpg,http://oldmidi.cdn3.cafe24.com/p/0099.jpg"
                })%>
                <% completed_project.data.push({
                  productName:"My Suncream2",
                  volume:"120ml",
                  category1:0,
                  category2:0,
                  totalOrderAmount:20000,
                  lastOrderDate:new Date(2022,10,15),
                  imagePaths:"https://ktsmemo.cafe24.com/p/0716.jpg,http://oldmidi.cdn3.cafe24.com/p/0786.jpg,http://ktsmemo.cdn3.cafe24.com/p/0731.jpg"
                
                })%>
                <% completed_project.data.push({
                  productName:"My Suncream3",
                  volume:"110g",
                  category1:0,
                  category2:0,
                  totalOrderAmount:30000,
                  lastOrderDate:new Date(2022,10,25),
                  imagePaths:"http://ktsmemo.cdn3.cafe24.com/p/0742.jpg,https://ktsmemo.cafe24.com/p/0646.jpg,https://ktsmemo.cafe24.com/p/0289.jpg"
                })%>
                <% completed_project.data.push({
                  productName:"My Suncream4",
                  volume:"210g",
                  category1:0,
                  category2:0,
                  totalOrderAmount:10000,
                  lastOrderDate:new Date(2022,10,5),
                  imagePaths:"http://oldmidi.cdn3.cafe24.com/p/0553.jpg"
                })%>
              </div>
              <!-- 테스트 데이터 생성 */ -->
              <!-- Completed Project -->
              <div class="widget-content widget-content-area br-20 px-4 mt-3">
                <div class="form-group mx-3">
                  <div class="row mb-3">
                    <div class="justify-content-between d-flex px-0">
                      <div>
                        <h5><strong>
                            <%= __("users.dashboard.header.CompletedProject") %>
                          </strong>
                        </h5>
                      </div>
                      <div class="row text-end">
                        <a href="<%= codezip.url.users.myProject.main %>">
                          <%= __("Show All") %>
                        </a>
                      </div>
                    </div>
                  </div>

                  <div class="row mt-3">
                    <div class="widget p-4 row" id="completed_project">
                      <% completed_project.data.forEach((item,index)=>{ %>
                      <div class="col d-flex flex-column">
                        <!-- style="height: calc(100%-50px);" -->
                        <div class="preview">
                          <img class="br-10" src="<%= item.imagePaths.split(`,`)[0] %>">
                        </div>
                        <div class="mb-auto mt-3">
                          <h6>
                            <%= item.productName %>
                          </h6>
                          <h6>
                            <%= __("product"+item.category1+"."+item.category2) %>
                            <%= " " + item.volume %>
                          </h6>
                          <p>
                            <%= __("users.dashboard.CompletedProject.Total발주수량") %>
                            <%= ' : ' + item.totalOrderAmount %>
                            <br>
                            <%= __("users.dashboard.CompletedProject.최근 발주 날짜") %>
                            <%= ' : ' + formatDate(item.lastOrderDate) %>
                          </p>
                        </div>
                        <div class="row mx-0 mt-3">
                          <button class="btn btn-outline-primary" type="button">
                            <%= __('REORDER') %>
                          </button>
                        </div>
                      </div>
                      <% }) %>

                      <!-- pagination -->
                      <% let page=1 %>
                      <!-- +completed_project.data.length -->
                      <% let count=10 %>
                      <% let end_page=parseInt((count-1)/4)+1; %>
                      <% if(end_page>1) { %>
                      <div class="d-flex justify-content-center mt-4">
                        <!-- 페이징처리 시작 -->
                        <!-- 처음 & 이전페이지 -->
                        <ul class="p-2 pagination">
                          <% if (page==1) { %>
                          <li class="page-item disabled"><a class="page-link">
                              <%- __('users.pagination.처음으로') %>
                            </a>
                          </li>
                          <li class="page-item disabled"><a class="page-link">
                              <%- __('users.pagination.이전으로') %>
                            </a>
                          </li>
                          <% } else { %>
                          <li class="page-item"><a class="page-link" >
                              <%- __('users.pagination.처음으로') %>
                            </a>
                          </li>
                          <li class="page-item"><a class="page-link" >
                              <%- __('users.pagination.이전으로') %>
                            </a>
                          </li>
                          <% } %>
                        </ul>
                        <!-- 페이지 리스트 -->
                        <ul class="p-2 pagination">
                          <% let end_list_num=end_page> 6 ? 5:end_page %>
                          <% if (page < 4) { for (let i=1; i<=end_list_num; i++) { if (page==i) { %>
                          <li class="page-item disabled">
                            <a class="page-link current_page">
                              <%= i %>
                            </a>
                          </li>
                          <% } else { %>
                          <li class="page-item"><a class="page-link" >
                              <%= i %>
                            </a></li>
                          <% }} %>
                          <% } else if ( page> end_page-3 ) {
                                                for (let i = end_page-4; i <= end_page; i++) { if (page==i) { %>
                          <li class="page-item disabled">
                            <a class="page-link current_page">
                              <%= i %>
                            </a>
                          </li>
                          <% } else { %>
                          <li class="page-item">
                            <a class="page-link" >
                              <%= i %>
                            </a>
                          </li>
                          <% }} %>
                          <% } else { for (let i=page-2; i < page+3; i++) { if (page==i) {
                                                        %>
                          <li class="page-item disabled">
                            <a class="page-link current_page">
                              <%= i %>
                            </a>
                          </li>
                          <% } else { %>
                          <li class="page-item">
                            <a class="page-link" >
                              <%= i %>
                            </a>
                          </li>
                          <% }} %>
                          <% } %>
                        </ul>
                        <!-- 다음 & 마지막페이지 -->
                        <ul class="p-2 pagination">
                          <% if(page==end_page){ %>
                          <li class="page-item disabled">
                            <a class="page-link">
                              <%- __('users.pagination.다음으로') %>
                            </a>
                          </li>
                          <li class="page-item disabled">
                            <a class="page-link">
                              <%- __('users.pagination.마지막으로') %>
                            </a>
                          </li>
                          <% } else { %>
                          <li class="page-item">
                            <a class="page-link" >
                              <%- __('users.pagination.다음으로') %>
                            </a>
                          </li>
                          <li class="page-item">
                            <a class="page-link" >
                              <%- __('users.pagination.마지막으로') %>
                            </a>
                          </li>
                          <% } %>
                        </ul>
                        <!-- 페이징처리 끝 -->
                      </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>

              <!-- 추천 프로젝트 & 추천 성분 -->
              <div class="row mt-5">
                <!-- 추천 프로젝트 -->
                <div class="col-6">
                  <div class="widget-content widget-content-area p-0 ps-4 h-100 d-flex flex-column">

                    <div class="justify-content-between d-flex px-0 mb-3">
                      <div>
                        <h5><strong>
                            <%= __('users.dashboard.header.RemommendedProject') %>
                          </strong>
                        </h5>
                      </div>
                      <div class="row text-end">
                        <a href="<%= codezip.url.users.contents %>">
                          <%= __('Show All') %>
                        </a>
                      </div>
                    </div>

                    <div class="widget row mx-0 h-100 align-content-center">
                      <!-- /* 테스트 데이터 생성 -->
                      <div>
                        <% let recommended_project=[]; %>
                        <% recommended_project.push({
                          productName:"테스트추천프로젝트1",
                          category1:0,
                          category2:0,
                          imagePaths:"http://oldmidi.cdn3.cafe24.com/p/0553.jpg,http://ktsmemo.cdn3.cafe24.com/p/0455.jpg,http://oldmidi.cdn3.cafe24.com/p/0099.jpg"
                        })%>
                        <% recommended_project.push({
                          productName:"테스트추천프로젝트2",
                          category1:1,
                          category2:0,
                          imagePaths:"https://ktsmemo.cafe24.com/p/0716.jpg,http://oldmidi.cdn3.cafe24.com/p/0786.jpg,http://ktsmemo.cdn3.cafe24.com/p/0731.jpg"
                        })%>
                        <% recommended_project.push({
                          productName:"테스트추천프로젝트3",
                          category1:2,
                          category2:0,
                          imagePaths:"http://ktsmemo.cdn3.cafe24.com/p/0742.jpg,https://ktsmemo.cafe24.com/p/0646.jpg,https://ktsmemo.cafe24.com/p/0289.jpg"
                        })%>
                      </div>
                      <!-- 테스트 데이터 생성 */ -->
                      <% recommended_project.forEach((item,index)=>{ %>
                      <div class="col-4">
                        <div class="preview">
                          <img class="br-15" src="<%= item.imagePaths.split(',')[0] %>">
                        </div>
                        <div class="row mt-3 justify-content-center text-break">
                          <p>Top / <%= __('product'+item.category1) %><br />
                            <span style="color: gray;">
                              <%= __('product'+item.category1+'.'+item.category2) %>
                            </span><br />
                            <strong>
                              <%= item.productName %>
                            </strong>
                          </p>
                        </div>
                      </div>
                      <% }) %>
                    </div>
                  </div>
                </div>
                <!-- 추천 성분 -->
                <div class="col-6">
                  <div class="widget-content widget-content-area p-0 pe-4 h-100 d-flex flex-column">
                    <div class="justify-content-between d-flex px-0 mb-3">
                      <div>
                        <h5><strong>
                            <%= __('users.dashboard.header.RemommendedIngredient') %>
                          </strong>
                        </h5>
                      </div>
                      <div class="row text-end">
                        <a href="<%= codezip.url.users.ingredient %>">
                          <%= __('Show All') %>
                        </a>
                      </div>
                    </div>

                    <div class="widget row mx-0 h-100 align-content-center">
                      <!-- /* 테스트 데이터 생성 -->
                      <div>
                        <% let remommended_ingredient=[]; %>
                        <% remommended_ingredient.push({ingredientName:"테스트추천성분1", type:"IC00,IC03",
                                              effects:"IE00,IE01,IE02"}) %>
                        <% remommended_ingredient.push({ingredientName:"테스트추천성분2",
                                                type:"IC01,IC03", effects:"IE03,IE04,IE05"}) %>
                        <% remommended_ingredient.push({ingredientName:"테스트추천성분3",
                                                  type:"IC00,IC02", effects:"IE06,IE07,IE08"}) %>
                      </div>
                      <!-- 테스트 데이터 생성 */ -->
                      <div class="table-responsive p-0">
                        <table class="table text-break">
                          <thead class="text-center">
                            <th>
                              <%= __('users.dashboard.remommendedIngredient.thead.성분명') %>
                            </th>
                            <th>
                              <%= __('users.dashboard.remommendedIngredient.thead.종류') %>
                            </th>
                            <th>
                              <%= __('users.dashboard.remommendedIngredient.thead.기능') %>
                            </th>
                          </thead>
                          <tbody class="table-group-divider text-break">
                            <% remommended_ingredient.forEach((item,index)=>{ %>
                            <tr>
                              <td>
                                <%= item.ingredientName %>
                              </td>
                              <td>
                                <%= array_i18n(item.type,__).join(', ') %>
                              </td>
                              <td><%= array_i18n(item.effects,__).join(', ') %></td>
                            </tr>
                            <% }) %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>


              <!-- News & Community -->
              <div class="row mt-5">
                <!-- News -->
                <div class="col-6">
                  <div class="widget-content widget-content-area p-0 ps-4 h-100 d-flex flex-column">

                    <div class="justify-content-between d-flex px-0">
                      <div>
                        <h5><strong>
                            <%= __('users.dashboard.header.News') %>
                          </strong>
                        </h5>
                      </div>
                      <div class="row text-end">
                        <a href="<%= codezip.url.users.news.main %>">
                          <%= __('Show All') %>
                        </a>
                      </div>
                    </div>
                    <!-- /* 테스트 데이터 생성 -->
                    <div>
                      <% let news=[]; %>
                      <% news.push({
                        title:"반갑습니다.",
                        firstName:"이름",
                        lastName:"성",
                        updateDate:new Date(2022,10,15),
                      })%>
                      <% news.push({
                        title:"환영합니다.",
                        firstName:"FirstName",
                        lastName:"LastName",
                        updateDate:new Date(2022,10,25),
                      })%>
                    </div>
                    <!-- 테스트 데이터 생성 */ -->
                    <% news.forEach((item,index)=>{ %>
                    <div class="widget row mx-0 h-50 align-content-center mt-3">
                      <%- include('../partials/badge/new.ejs') %>
                      <div class="h6"><%= item.title %></div>
                      <% if(nameOrderInKorean.indexOf(locale) !=-1) { %>
                      <div><%= `${formatDate(item.updateDate)} ${__('users.community.news.index.WrittenBy')} ${item.lastName} ${item.firstName}` %></div>
                      <% } else { %>
                      <div><%= `${formatDate(item.updateDate)} ${__('users.community.news.index.WrittenBy')} ${item.firstName} ${item.lastName}` %></div>
                      <% } %>
                    </div>
                    <% }) %>
                  </div>
                </div>
                <!-- community -->
                <div class="col-6">
                  <div class="widget-content widget-content-area p-0 pe-4 h-100 d-flex flex-column">
                    <div class="justify-content-between d-flex px-0">
                      <div>
                        <h5><strong>
                            <%= __('users.dashboard.header.Community') %>
                          </strong>
                        </h5>
                      </div>
                      <div class="row text-end">
                        <a href="<%= codezip.url.users.community.main %>">
                          <%= __('Show All') %>
                        </a>
                      </div>
                    </div>

                    <!-- /* 테스트 데이터 생성 -->
                    <div>
                      <% let community=[]; %>
                      <% community.push({
                        title:"감사합니다.",
                        firstName:"이름",
                        lastName:"성",
                        updateDate:new Date(2022,10,15),
                      })%>
                      <% community.push({
                        title:"안녕하세요.",
                        firstName:"FirstName",
                        lastName:"LastName",
                        updateDate:new Date(2022,10,25),
                      })%>
                    </div>
                    <!-- 테스트 데이터 생성 */ -->
                    <% community.forEach((item,index)=>{ %>
                    <div class="widget row mx-0 h-50 align-content-center mt-3">
                      <%- include('../partials/badge/new.ejs') %>
                      <div class="h6"><%= item.title %></div>
                      <% if(nameOrderInKorean.indexOf(locale) !=-1) { %>
                      <div><%= `${formatDate(item.updateDate)} ${__('users.community.index.WrittenBy')} ${item.lastName} ${item.firstName}` %></div>
                      <% } else { %>
                      <div><%= `${formatDate(item.updateDate)} ${__('users.community.index.WrittenBy')} ${item.firstName} ${item.lastName}` %></div>
                      <% } %>
                    </div>
                    <% }) %>
                  </div>
                </div>
              </div>


            </div>

          </div>
        </div>
      </div>
      <!--  END CONTENT AREA  -->

      <%- include ("../partials/footer.ejs") %>

    </div>
    <!-- END MAIN CONTAINER -->

    <%- include ("../partials/commonScrpits.ejs") %>

    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
    <script>
    </script>
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
    <%- include ("../partials/chatMark.ejs") %>

</body>

</html>