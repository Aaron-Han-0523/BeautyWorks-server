<!DOCTYPE html>
<html lang="ko">

<head>
  <%- include ("../partials/header.ejs") %>
  <!-- 이미지 그룹 슬라이드 -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.1/css/swiper.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.1/js/swiper.js"></script>
</head>

<body class="layout-boxed">

  <%- include ("../partials/loader.ejs") %>

  <%- include ("../partials/client-nav.ejs") %>

  <!--  BEGIN MAIN CONTAINER  -->
  <div class="main-container" id="container">

    <div class="overlay"></div>
    <div class="search-overlay"></div>

    <%- include ("../partials/client-sidebar.ejs") %>

    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
      <div class="layout-px-spacing">

        <div class="middle-content p-0">

          <!-- BREADCRUMB -->
          <div class="row px-3">
            <div class="breadcrumb align-items-end d-flex mt-4 br-20">
              <div class="p-1 col-3">
                <h6 class="main-menu">
                  <%= __('Project') %>
                </h6>
                <h4><strong>
                    <%= __('My Project') %>
                  </strong></h4>
              </div>
            </div>
          </div>
          <!-- CONTENT AREA -->
          <div class="row">
            <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">

              <!-- 임시 저장한 Progress -->
              <div class="widget-content widget-content-area br-20 px-4 mt-3">
                <div class="form-group ms-3">
                  <div class="row mb-3">
                    <div class="justify-content-between d-flex px-0">
                      <div>
                        <h5><strong>
                            <%= __("users.myProject.header.TempProgress") %>
                          </strong>
                        </h5>
                      </div>
                    </div>
                  </div>

                  <% temp_project.forEach((item,index)=>{ %>
                  <div class="row">
                    <div class="progress-card">
                      <div class="progress-card-img progress-<%= item.phase %>">
                        <img src="<%=codezip.url.users.progress_icon[`_`+item.phase] %>">
                      </div>
                      <div class="progress-card-body">
                        <div class="progress-card-name">
                          <h6>
                            <%= (index+1)+". "+item.project_name %>
                            <span class="ms-1" style="font-size: small; color:gray;"><%= formatDate(item.create_date) %></span>
                          </h6>
                        </div>
                        <%- include("../partials/temp_progressbar/"+item.detail_phase+".ejs", {project: item}) %>
                      </div>
                    </div>
                  </div>
                  <% }) %>

                </div>
              </div>

              <!-- Progress -->
              <div class="widget-content widget-content-area br-20 px-4">
                <div class="form-group ms-3">

                  <div class="row mb-3">
                    <div class="justify-content-between d-flex px-0">
                      <div>
                        <h5><strong>
                            <%= __('users.myProject.header.Progress') %>
                          </strong>
                        </h5>
                      </div>
                    </div>
                  </div>

                  <% project.forEach((item,index)=>{
                    let number_of_detail_phase = codezip.numberOfProjectState.detail_phase[item.phase] %>
                  <div class="row">
                    <div class="progress-card">
                      <div class="progress-card-img progress-<%= item.phase %>">
                        <img src="<%= codezip.url.users.progress_icon['_'+item.phase] %>">
                      </div>
                      <div class="progress-card-body">
                        <div class="progress-card-name">
                          <div class="justify-content-between d-flex px-0">
                            <div class="align-self-center">
                              <h6>
                                <%= (index+1)+'. '+item.project_name %>
                                <span class="ms-1" style="font-size: small; color:gray;"><%= formatDate(item.create_date) %></span>
                              </h6>
                            </div>
                            <div class="row text-end me-4">
                              <% if(item.phase==1) { %>
                              <% if([3,4].includes(item.detail_phase)) { %>
                              <button class="btn btn-outline-primary px-3" type="button" onclick="formula_confirmed('<%= item.id %>');"><%= __('users.myProject.btn.샘플확정') %></button>
                              <% }else{ %>
                              <button class="btn btn-outline-gray px-3" disabled><%= __('users.myProject.btn.샘플확정') %></button>
                              <% }}else{ %>
                              <% } %>
                            </div>
                          </div>

                        </div>
                        <div class="stepper-wrapper">
                          <% for(let i=0; i < number_of_detail_phase; i++ ) { %>
                          <!-- 완료된 단계 -->
                          <% if(i < item.detail_phase) { %>
                          <% if(item.phase==1 && i==0){ %>
                          <div class="stepper-item _<%= item.phase %> _<%= i %>_ completed bs-tooltip" title="<%= __('project.request_date') + ' : ' + formatDate(item.request_date)  %>">
                            <!-- <%# }else if(item.phase==1 && i==2){ %>
                            <div class="stepper-item _<%= item.phase %> _<%= i %>_ completed bs-tooltip" title="<%= __('project.tracking_number') + ' : ' + item.tracking_number  %>"> -->
                            <% }else if(item.phase==2 && i==0){ %>
                            <div class="stepper-item _<%= item.phase %> _<%= i %>_ completed bs-tooltip hover" onclick="location.href='<%= codezip.url.users.documents %>/<%= item.id %>';" style="cursor: pointer;">
                              <% }else{ %>
                              <div class="stepper-item _<%= item.phase %> _<%= i %>_ completed bs-tooltip">
                                <% } %>
                                <!-- 진행중인 단계 -->
                                <% }else if(i == item.detail_phase) { %>
                                <% if(item.phase==1 && i==0){ %>
                                <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.request_date') + ' : ' + formatDate(item.request_date)  %>">
                                  <% }else if(item.phase==1 && i==2){ %>
                                  <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.tracking_number') + ' : ' + item.tracking_number  %>">
                                    <% }else if(item.phase==1 && [3,4].includes(i)){ %>
                                    <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip hover" onclick="location.href='<%= codezip.url.users.myProject.feedback %>?n=<%= item.id %>';" style="cursor: pointer;">
                                      <% }else if(item.phase==2 && i==1){ %>
                                      <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.tooltip.2-1') %>">
                                        <% }else if(item.phase==3 && i==0){ %>
                                        <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip hover" onclick="location.href='<%= codezip.url.users.documents %>/<%= item.id %>';" style="cursor: pointer;" title="<%= __('project.tooltip.3') %>">
                                          <% }else if(item.phase==3 && i==1){ %>
                                          <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.tooltip.3') %>">
                                            <% }else if(item.phase==4 && i==0){ %>
                                            <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.tooltip.4-0') %>">
                                              <% }else if(item.phase==4 && i==1){ %>
                                              <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.tooltip.4-1') %>">
                                                <% }else if(item.phase==4 && i==2){ %>
                                                <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip hover" onclick="location.href='<%= codezip.url.users.documents %>/<%= item.id %>';" style="cursor: pointer;">
                                                  <% }else if(item.phase==5 && i==0){ %>
                                                  <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= item.packaging_tooltip %>">
                                                    <% }else if(item.phase==5 && i==1){ %>
                                                    <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.tooltip.5-1') %>">
                                                      <% }else if(item.phase==7 && i==0){ %>
                                                      <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.tooltip.7-0') %>">
                                                        <% }else if(item.phase==7 && i==1){ %>
                                                        <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip hover" onclick="location.href='<%= codezip.url.users.documents %>/<%= item.id %>';" style="cursor: pointer;">
                                                          <% }else if(item.phase==8 && i==0){ %>
                                                          <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.tooltip.8-0') %>">
                                                            <% }else if(item.phase==8 && i==1){ %>
                                                            <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip" title="<%= __('project.shipment_date') + ' : ' + formatDate(item.shipment_date)  %>">

                                                              <% }else{ %>
                                                              <div class="stepper-item _<%= item.phase %> _<%= i %>_ active bs-tooltip">
                                                                <% } %>
                                                                <% }else{ %>
                                                                <div class="stepper-item _<%= item.phase %> _<%= i %>_">
                                                                  <% } %>
                                                                  <div class="step-counter"></div>
                                                                  <div class="step-name"><%= __('project_phase' + item.phase + '.' + i) %>
                                                                    <% if(item.phase==1 && i==1) { %>
                                                                    <%=  '(' + __('users.myProject.stepName.add.sampleNumber',item.sample_number) + ')' %>
                                                                    <% } %>
                                                                  </div>
                                                                </div>
                                                                <% } %>
                                                              </div>
                                                            </div>
                                                          </div>
                                                        </div>
                                                        <% }) %>

                                                      </div>
                                                    </div>

                                                    <!-- Completed Project -->
                                                    <div class="widget-content widget-content-area br-20 px-4 mt-3">
                                                      <div class="form-group ms-3">
                                                        <div class="row mb-3">
                                                          <div class="justify-content-between d-flex px-0">
                                                            <div>
                                                              <h5><strong>
                                                                  <%= __("users.dashboard.header.CompletedProject") %>
                                                                </strong>
                                                              </h5>
                                                            </div>
                                                          </div>
                                                        </div>

                                                        <div class="row mt-3">
                                                          <% if(completed_project.count){ %>
                                                          <div class="widget p-4 row mx-0 justify-content-center" id="completed_project">
                                                            <% completed_project.rows.forEach((item,index)=>{ %>
                                                            <div class="col-3 d-flex flex-column">
                                                              <!-- style="height: calc(100%-50px);" -->
                                                              <% if(item.image_paths) { %>
                                                              <div class="preview">
                                                                <img class="br-15" src="<%= item.image_paths.split(',')[0] %>">
                                                              </div>
                                                              <% } %>
                                                              <div class="mb-auto mt-3">
                                                                <h6>
                                                                  <%= item.project_name %>
                                                                </h6>
                                                                <h6>
                                                                  <%= __("product"+item.category1+"."+item.category2) %>
                                                                  <%= " " + item.capacity %>
                                                                </h6>
                                                                <p>
                                                                  <%= __("users.dashboard.CompletedProject.Total발주수량") %>
                                                                  <%= ' : ' + item.total_order_quantity %>
                                                                  <br>
                                                                  <%= __("users.dashboard.CompletedProject.최근 발주 날짜") %>
                                                                  <%= ' : ' + formatDate(item.recent_order_date) %>
                                                                </p>
                                                              </div>
                                                              <div class="row mx-0 mt-3">
                                                                <button class="btn btn-outline-primary" type="button">
                                                                  <%= __('REORDER') %>
                                                                </button>
                                                              </div>
                                                            </div>
                                                            <% }) %>

                                                            <!-- pagination -->
                                                            <!--make_pagination_by_href( i18n_func, page, count, baseURL, limit = 10) -->
                                                            <%- make_pagination_by_href(
                                  __,
                                  page,
                                  completed_project.count,
                                  codezip.url.users.dashboard,
                                  4
                                ) %>

                                                          </div>
                                                          <% } %>
                                                        </div>
                                                      </div>
                                                    </div>

                                                  </div>

                                                </div>
                                              </div>
                                            </div>
                                          </div>
                                          <!--  END CONTENT AREA  -->

                                          <%- include ("../partials/footer.ejs") %>

                                        </div>
                                        <!-- END MAIN CONTAINER -->

                                        <%- include ("../partials/commonScrpits.ejs") %>

