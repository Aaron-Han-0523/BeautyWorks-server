                                      <div></div>
                                      <% } %>
                                      <% } %>
                                    </div>
                                  </div>
                                </div>
                                <!-- <div class="modal-footer text-center my-3">
                                  <button type="button" class="btn-outline-gray bg-gray br-15 p-3 px-5" data-bs-dismiss="modal">
                                    <%= __('users.newProject.option.btn.확인') %>
                                  </button>
                                </div> -->
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>


                      <!-- 색상 입력 -->
