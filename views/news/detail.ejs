<!DOCTYPE html>
<html lang="ko">

<head>
  <%- include ("../partials/header.ejs") %>
</head>

<body class="layout-boxed">

  <%- include ("../partials/loader.ejs") %>

  <%- include ("../partials/client-nav.ejs") %>
  <%- include ("../partials/chatMark.ejs") %>

  <!--  BEGIN MAIN CONTAINER  -->
  <div class="main-container" id="container">

    <div class="overlay"></div>
    <div class="search-overlay"></div>

    <%- include ("../partials/client-sidebar.ejs") %>

    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
      <div class="layout-px-spacing">

        <div class="middle-content p-0">

          <!-- BREADCRUMB -->
          <div class="row px-3 mt-3">
            <div class="breadcrumb">
              <div class="">
                <h6 class="main-menu">
                  <%= __('Lounge') %>
                </h6>
                <div class="menu">
                  <%= __('News') %>
                </div>
              </div>
            </div>
          </div>

          <div class="row px-3 ">
            <div class="ms-1 p-3">
              <div class="col">
                <h4><strong>
                    <%= __('users.news.subtitle') %>
                  </strong></h4>
              </div>
            </div>
          </div>

          <!-- CONTENT AREA -->
          <div class="row px-3 justify-content-center">
            <div class="col-xxl-12 col-xl-12 col-md-12 col-sm-12 ms-1 ps-3">

              <div class="widget w-100">

                <!-- title -->
                <div class="form-control m-2 d-flex justify-content-between">
                  <div class="p-1 align-self-center d-flex">
                    <%- include('../partials/badge/new.ejs',{date:news.create_date}) %>
                    <span class="align-self-center"><%= `${news.title}` %></span>
                  </div>
                  <div class="p-1 d-flex">
                    <h6 class="me-3">
                      <%= `${formatDate(news.update_date)} | ${__('users.news.index.WrittenBy')} ${__('admin.userName')}` %>
                    </h6>
                  </div>
                </div>

                <!-- content -->
                <div class="row m-3 p-3 my-5">
                  <div class="">
                    <h6 style="white-space: pre-line;"><%= news.content %></h6>
                  </div>
                </div>

                <hr>

                <div class="d-flex align-items-center">
                  <div class="col-4"></div>

                  <!-- 네비게이션 -->
                  <div class="col-4 d-flex justify-content-center align-items-end">
                    <div class="col-4 mx-3 hover">
                      <% if(prev) { %><a href="<%= codezip.url.users.news.main %>/<%= prev.id %>">
                        <h6>
                          <i class="fa-solid fa-chevron-left  me-3"></i>
                          <%= __('btn.이전글') %>
                        </h6>
                      </a>
                      <% } %>
                    </div>
                    <div class="col-4 text-center mx-3 hover"><a href="<%= codezip.url.users.news.main %>">
                        <h6>
                          <%= __('btn.목록') %>
                        </h6>
                      </a></div>
                    <div class="col-4 text-end mx-3 hover">
                      <% if(next) { %>
                      <a href="<%= codezip.url.users.news.main %>/<%= next.id %>">
                        <h6>
                          <%= __('btn.다음글') %><i class="fa-solid fa-chevron-right  ms-3"></i>
                        </h6>
                      </a>
                      <% } %>
                    </div>
                  </div>

                  <div class="col-4"></div>
                </div>

              </div>
            </div>


          </div>
        </div>
      </div>

    </div>
  </div>
  </div>
  <!--  END CONTENT AREA  -->

  <%- include ("../partials/footer.ejs") %>

  </div>
  <!-- END MAIN CONTAINER -->

  <%- include ("../partials/commonScrpits.ejs") %>

  <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
  <script>
    window.addEventListener('load', e => {
      document.getElementsByClassName("menu")[7].classList.add("custom-active");
    })
  </script>
  <script>

  </script>
  <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
</body>

</html>