<!DOCTYPE html>
<html lang="ko">

<head>
  <%- include ("../partials/header.ejs") %>
  <% const numberOfProduct=codezip.numberOfProduct; %>
</head>

<body class="layout-boxed">

  <%- include ("../partials/loader.ejs") %>

  <%- include ("../partials/client-nav.ejs") %>
  <%- include ("../partials/chatMark.ejs") %>

  <!--  BEGIN MAIN CONTAINER  -->
  <div class="main-container" id="container">

    <div class="overlay"></div>
    <div class="search-overlay"></div>

    <%- include ("../partials/client-sidebar.ejs") %>

    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
      <div class="layout-px-spacing">

        <div class="middle-content  p-0">

          <!-- BREADCRUMB -->
          <div class="row px-3 mt-3">
            <div class="breadcrumb">
              <div class="col-3">
                <h6 class="main-menu">
                  <!-- <%= __('Customizing') %> -->
                </h6>
                <div class="menu">
                    <%= __('ChangingPassword') %>
                  </div>
              </div>
            </div>
          </div>

          <div class="row px-3 ">
            <div class="ms-1 p-3">
              <div class="col-3">
                <h4><strong>
                    <!-- <%= __('users.formula.title.Benchmark') %> -->
                  </strong></h4>
              </div>
            </div>
          </div>

          <!-- CONTENT AREA -->
          <div class="row px-3 justify-content-center">
            <div class="col-xxl-12 col-xl-12 col-md-12 col-sm-12 ms-1 ps-3">

              <div class="widget w-100 py-5 px-4">

                <div class="form-group">
                  <form method="post">
                    <div class="row mb-2">
                      <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h6><%= __('users.changingPassword.currentPassword') %></h6>
                      </div>
                    </div>

                    <div class="row layout-spacing">
                      <div class="col-12">
                        <label for="currentPassword" class="visually-hidden">Password</label>
                        <input id="currentPassword" type="password" name="currentPassword" placeholder="" class="form-control" required>
                      </div>
                    </div>

                    <div class="row mb-2">
                      <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h6><%= __('users.changingPassword.newPassword') %></h6>
                      </div>
                    </div>

                    <div class="row layout-spacing">
                      <div class="col-12">
                        <label for="newPassword" class="visually-hidden">Password</label>
                        <input id="newPassword" type="password" name="newPassword" placeholder="" class="form-control" required>
                      </div>
                    </div>

                    <div class="row mb-2">
                      <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h6><%= __('users.changingPassword.confirmPassword') %></h6>
                      </div>
                    </div>

                    <div class="row layout-spacing">
                      <div class="col-12">
                        <label for="confirmPassword" class="visually-hidden">Password</label>
                        <input id="confirmPassword" type="password" name="confirmPassword" placeholder="" class="form-control" required>
                      </div>
                    </div>

                    <div class="row layout-top-spacing">
                      <div class="col-12 ">
                        <button class="col-1 btn btn-outline-primary mb-2 me-4"><%= __('btn.save') %></button>
                      </div>
                    </div>
                  </form>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--  END CONTENT AREA  -->

    <%- include ("../partials/footer.ejs") %>

  </div>
  <!-- END MAIN CONTAINER -->

  <%- include ("../partials/commonScrpits.ejs") %>

  <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
  <script>
    window.addEventListener('load', e => {
      document.getElementsByClassName("menu")[9].classList.add("custom-active");
    })
  </script>
  <script>
    function validataion() {
      if (confirmPassword.value != newPassword.value) {
        alert("<%= __('msg.신규비밀번호불일치') %>")
        return false;
      }

      return true
    }

    const thisForm = document.forms[0]
    thisForm.onsubmit = (e) => {
      e.preventDefault();

      if (!validataion()) return;

      fetch(thisForm.action, {
        method: thisForm.method,
        body: new URLSearchParams(new FormData(thisForm))
      }).then(res => {
        if (res.ok) {
          alert("<%= __('msg.changingPasswordSuccess') %>")
        } else if (res.status == 403) {
          alert("<%= __('msg.현재비밀번호불일치') %>")
        } else if (res.status == 404) {
          alert("<%= __('msg.이메일존재하지않음') %>")
        } else {
          console.error(res);
          throw new Error(res.statusText)
        }
      }).catch(err => {
        alert(err)
      })
    }
  </script>

  <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->

</body>

</html>